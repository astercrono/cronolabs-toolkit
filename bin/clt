#!/usr/bin/env bash

export CLT_BIN=$(dirname "$(realpath "${BASH_SOURCE[0]}")")
cd $CLT_BIN
cd ..
export CLT_BASE="$(pwd)"
cd $CLT_BIN

subcommands=("help" "install" "provision" "update")

subcommand_arg="$1"
valid_subcommand=false
for item in "${subcommands[@]}"; do
	if [[ "$item" == "$subcommand_arg" ]]; then
		valid_subcommand=true
		break
	fi
done

if [ $valid_subcommand = false ]; then
	echo "Invalid subcommand $1"
	exit 1
fi

shift

case $subcommand_arg in
install)
	./clt-install $@
	;;
provision)
	./clt-provision $@
	;;
update)
	./clt-update $@
	;;
help)
	cat help.txt
	;;
*)
	echo "Unknown system type"
	;;
esac
